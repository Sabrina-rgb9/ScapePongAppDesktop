<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.VBox?>

<BorderPane xmlns="http://javafx.com/javafx/11.0.1" 
            xmlns:fx="http://javafx.com/fxml/1" 
            fx:controller="com.desktop.controllerStart"
            prefHeight="600" 
            prefWidth="900"
            style="-fx-background-color: #0b0011;">
    
    <left>
        <VBox alignment="CENTER" spacing="30" style="-fx-background-color: #1d063b; -fx-padding: 40;">
            <!-- Logo -->
            <ImageView fitWidth="300" fitHeight="300" preserveRatio="true">
                <image>
                    <Image url="@/assets/icons/spacepong_logo.png" />
                </image>
            </ImageView>
            
            <!-- Botón Conectar abajo del logo -->
            <Button fx:id="confirmButton" 
                    text="CONECTAR" 
                    style="-fx-background-color: #00ff9c; -fx-text-fill: #0b0011; -fx-background-radius: 25;"
                    onAction="#handleConfirm"
                    prefWidth="200" 
                    prefHeight="50"/>
        </VBox>
    </left>
    
    <center>
        <VBox alignment="CENTER" spacing="30" style="-fx-padding: 50;">
            <!-- Título Configuración -->
            <Label fx:id="configLabel" 
                   text="CONFIGURACIÓN" 
                   style="-fx-text-fill: #00ff9c;"/>
            
            <!-- Formulario de conexión -->
            <VBox alignment="CENTER_LEFT" spacing="25" 
                  style="-fx-background-color: #1d063b; -fx-padding: 40; -fx-background-radius: 15;">
                
                <!-- Campo Nombre -->
                <VBox spacing="8">
                    <Label fx:id="nameLabel"
                           text="NOMBRE" 
                           style="-fx-text-fill: #bddddd;"/>
                    <TextField fx:id="nameField" 
                             promptText="Ingresa tu nombre"
                             style="-fx-background-color: #0b0011; -fx-text-fill: #00ff9c; -fx-prompt-text-fill: #61c89c; -fx-border-color: #00ff9c; -fx-border-radius: 8; -fx-background-radius: 8;"
                             prefWidth="350"
                             prefHeight="40"/>
                </VBox>

                                <!-- Campo URL -->
                <VBox spacing="8">
                    <Label fx:id="nameLabel"
                           text="URL" 
                           style="-fx-text-fill: #bddddd;"/>
                    <TextField fx:id="nameField" 
                             promptText="Ingresa tu nombre URL"
                             style="-fx-background-color: #0b0011; -fx-text-fill: #00ff9c; -fx-prompt-text-fill: #61c89c; -fx-border-color: #00ff9c; -fx-border-radius: 8; -fx-background-radius: 8;"
                             prefWidth="350"
                             prefHeight="40"/>
                </VBox>

            </VBox>
            
            <!-- Créditos -->
            <VBox alignment="CENTER" spacing="5">
                <Label fx:id="desarrolladoLabel"
                       text="DESARROLLADO POR" 
                       style="-fx-text-fill: #61c89c;"/>
                <Label fx:id="autoresLabel"
                       text="SABRINA &amp; RUBEN" 
                       style="-fx-text-fill: #00ff9c;"/>
            </VBox>
        </VBox>
    </center>
    
    <padding>
        <Insets top="20" right="20" bottom="20" left="20"/>
    </padding>
    
</BorderPane>