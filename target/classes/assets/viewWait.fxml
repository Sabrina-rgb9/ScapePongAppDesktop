<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.shape.Line?>
<?import javafx.scene.text.Font?>

<BorderPane prefHeight="600" prefWidth="900" style="-fx-background-color: #0b0011;" xmlns="http://javafx.com/javafx/24.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.spacepong.desktop.CtrlWait">
    
    <left>
        <VBox alignment="CENTER" spacing="30" style="-fx-background-color: #1d063b; -fx-padding: 40;">
            <!-- Logo -->
            <ImageView fitHeight="300" fitWidth="300" preserveRatio="true">
                <image>
                    <Image url="@/assets/icons/spacepong_logo.png" />
                </image>
            </ImageView>
            
            <!-- Estado de conexión -->
            <VBox alignment="CENTER" spacing="10">
                <Label text="ESTADO" style="-fx-text-fill: #61c89c; -fx-font-size: 16;"/>
                <Label fx:id="statusLabel" text="ESPERANDO JUGADORES" style="-fx-text-fill: #00ff9c; -fx-font-size: 18; -fx-font-weight: bold;"/>
            </VBox>
        </VBox>
    </left>
    
    <center>
        <VBox alignment="CENTER" spacing="40" style="-fx-padding: 50;">
            <!-- Título Sala de Espera -->
            <Label fx:id="txtTitle" text="SALA DE ESPERA" style="-fx-text-fill: #00ff9c; -fx-font-size: 36; -fx-font-weight: bold;" />
            
            <!-- Contenedor de jugadores -->
            <VBox alignment="CENTER" spacing="30" style="-fx-background-color: #1d063b; -fx-padding: 40; -fx-background-radius: 15;">
                <Label text="JUGADORES CONECTADOS" style="-fx-text-fill: #bddddd; -fx-font-size: 20;"/>
                
                <!-- Separador -->
                <Line endX="400" stroke="#00ff9c" strokeWidth="2" />
                
                <!-- Panel de jugadores -->
                <HBox alignment="CENTER" spacing="80" prefHeight="150">
                    <!-- Jugador 1 -->
                    <VBox alignment="CENTER" spacing="15">
                        <Label text="JUGADOR 1" style="-fx-text-fill: #61c89c; -fx-font-size: 18;"/>
                        <VBox style="-fx-background-color: #0b0011; -fx-padding: 20; -fx-border-color: #00ff9c; -fx-border-radius: 10; -fx-background-radius: 10;" 
                              prefWidth="200" prefHeight="100" alignment="CENTER">
                            <Label fx:id="txtPlayer0" text="?" style="-fx-text-fill: #00ff9c; -fx-font-size: 32; -fx-font-weight: bold;"/>
                        </VBox>
                        <Label text="ESPERANDO..." style="-fx-text-fill: #61c89c; -fx-font-size: 14;" fx:id="statusPlayer0"/>
                    </VBox>
                    
                    <!-- VS -->
                    <VBox alignment="CENTER">
                        <Label text="VS" style="-fx-text-fill: #00ff9c; -fx-font-size: 48; -fx-font-weight: bold;"/>
                    </VBox>
                    
                    <!-- Jugador 2 -->
                    <VBox alignment="CENTER" spacing="15">
                        <Label text="JUGADOR 2" style="-fx-text-fill: #61c89c; -fx-font-size: 18;"/>
                        <VBox style="-fx-background-color: #0b0011; -fx-padding: 20; -fx-border-color: #00ff9c; -fx-border-radius: 10; -fx-background-radius: 10;" 
                              prefWidth="200" prefHeight="100" alignment="CENTER">
                            <Label fx:id="txtPlayer1" text="?" style="-fx-text-fill: #00ff9c; -fx-font-size: 32; -fx-font-weight: bold;"/>
                        </VBox>
                        <Label text="ESPERANDO..." style="-fx-text-fill: #61c89c; -fx-font-size: 14;" fx:id="statusPlayer1"/>
                    </VBox>
                </HBox>
                
                <!-- Contador -->
                <VBox alignment="CENTER" spacing="10" style="-fx-padding: 20;">
                    <Label text="INICIANDO EN" style="-fx-text-fill: #bddddd; -fx-font-size: 16;"/>
                    <Label fx:id="countdownLabel" text="..." style="-fx-text-fill: #00ff9c; -fx-font-size: 48; -fx-font-weight: bold;"/>
                </VBox>
            </VBox>
            
            <!-- Información adicional -->
            <VBox alignment="CENTER" spacing="5">
                <Label text="Cuando ambos jugadores se conecten" style="-fx-text-fill: #61c89c; -fx-font-size: 14;"/>
                <Label text="el juego comenzará automáticamente" style="-fx-text-fill: #61c89c; -fx-font-size: 14;"/>
            </VBox>
        </VBox>
    </center>
    
    <!-- Créditos en la parte inferior -->
    <bottom>
        <VBox alignment="CENTER" spacing="5" style="-fx-padding: 20;">
            <Label text="DESARROLLADO POR" style="-fx-text-fill: #61c89c; -fx-font-size: 12;"/>
            <Label text="SABRINA &amp; RUBEN" style="-fx-text-fill: #00ff9c; -fx-font-size: 14;"/>
        </VBox>
    </bottom>
    
    <padding>
        <Insets bottom="20" left="20" right="20" top="20" />
    </padding>
    
</BorderPane>